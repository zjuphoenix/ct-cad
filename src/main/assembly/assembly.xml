<assembly>
    <!--
        打成包的文件名为:{artifactId}-{version}-{id}.{format}
    -->
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <!--
            useProjectArtifact表示将项目本身生成的构件也包含在内，最终打包至输出包内的{outputDirectory}(lib)路径下
            -->
            <useProjectArtifact>true</useProjectArtifact>
            <!--
            outputDirectory设为lib，表示把依赖的jar包打包到lib文件夹下
            -->
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!--
            打包工程根目录下的README.txt文件到打成的包的根目录
            -->
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--
            打包工程根目录下src/main/scripts目录下的run.sh和run.bat文件到打成的包的根目录下的bin文件夹
            -->
            <directory>src/main/scripts</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>run.sh</include>
                <include>run.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--
            打包工程根目录下upload文件夹下的所有文件到打成的包的根目录下的bin/upload文件夹下
            -->
            <directory>upload</directory>
            <outputDirectory>/bin/upload</outputDirectory>
        </fileSet>
        <fileSet>
            <!--
            打包工程根目录下conf目录下的config.json文件到打成的包的根目录下的conf文件夹下
            -->
            <directory>conf</directory>
            <outputDirectory>/bin/conf</outputDirectory>
            <includes>
                <include>config.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--
            打包工程根目录下db目录下的zhuojian文件到打成的包的根目录下的bin/db文件夹下
            -->
            <directory>db</directory>
            <outputDirectory>/bin/db</outputDirectory>
            <includes>
                <include>zhuojian</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>